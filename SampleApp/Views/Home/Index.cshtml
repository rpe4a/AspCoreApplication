@model IEnumerable<EntitiesLib.Models.Phone>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Home</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width">
</head>
<body>
    <div>
        <h3>Смартфоны</h3>
        <table>
            <tr>
                <td>Модель</td>
                <td>Производитель</td>
                <td>Цена</td>
                <td></td>
            </tr>
            @foreach (var phone in Model)
            {
                <tr>
                    <td>@phone.Name</td>
                    <td>@phone.Company</td>
                    <td>@phone.Price</td>
                    <td><a href="~/Home/Buy/@phone.Id">Купить</a></td>
                </tr>
            }
        </table>
    </div>
</body>
</html>